---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import blogData from '../../data/blog.json';

const { slug } = Astro.params;
const post = blogData.posts.find((p) => p.slug === slug);
if (!post) throw new Error('Blog post not found');
---

<Layout title={`${post.title} - Dr. Academic Excellence`} description={post.content.substring(0, 150) + "..."}>
  <Header />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-navy-50 via-white to-navy-100">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 fade-in-scroll">
          <div class="flex items-center justify-center space-x-4 mb-6">
            <span class="bg-navy-100 text-navy-800 text-sm font-medium px-3 py-1 rounded-full">
              {post.category}
            </span>
            <span class="text-charcoal-500 text-sm">{post.readTime}</span>
          </div>
          
          <h1 class="text-4xl sm:text-5xl font-bold text-navy-900 mb-6 leading-tight">
            {post.title}
          </h1>
          
          <div class="flex items-center justify-center space-x-6 text-charcoal-600">
            <time class="flex items-center">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              {new Date(post.date).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>
        </div>
        
        <div class="mb-12 fade-in-scroll">
          <img 
            src={post.image} 
            alt={post.title}
            class="w-full h-64 sm:h-80 object-cover rounded-2xl shadow-lg"
          />
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <section class="py-12 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <article class="prose prose-lg max-w-none fade-in-scroll">
          <div class="text-charcoal-700 leading-relaxed" set:html={post.content}></div>
        </article>
        
        <!-- Author Bio -->
        <div class="mt-16 p-8 bg-navy-50 rounded-2xl fade-in-scroll">
          <div class="flex items-start space-x-6">
            <img 
              src="https://images.pexels.com/photos/1181695/pexels-photo-1181695.jpeg?auto=compress&cs=tinysrgb&w=150" 
              alt="Dr. Academic Excellence"
              class="w-20 h-20 rounded-full object-cover"
            />
            <div>
              <h3 class="text-xl font-bold text-navy-900 mb-2">Dr. Academic Excellence</h3>
              <p class="text-charcoal-700 mb-4">
                Pro Vice-Chancellor at Noakhali Science and Technology University, dedicated to advancing higher education through innovation, research excellence, and academic leadership.
              </p>
              <div class="flex space-x-4">
                <a href="#" class="text-navy-700 hover:text-navy-900 transition-colors">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
                <a href="#" class="text-navy-700 hover:text-navy-900 transition-colors">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Navigation -->
        <div class="mt-12 flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
          <a 
            href="/blog" 
            class="inline-flex items-center text-navy-700 font-semibold hover:text-navy-900 transition-colors group"
          >
            <svg class="mr-2 h-5 w-5 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
            </svg>
            Back to Blog
          </a>
          
          <a 
            href="#contact" 
            class="btn-primary"
          >
            Get In Touch
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .prose h2 {
    @apply text-3xl font-bold text-navy-900 mb-6 mt-12;
  }
  
  .prose h3 {
    @apply text-2xl font-semibold text-navy-800 mb-4 mt-8;
  }
  
  .prose p {
    @apply text-charcoal-700 mb-6 leading-relaxed;
  }
  
  .prose ul, .prose ol {
    @apply text-charcoal-700 mb-8 space-y-3;
  }
  
  .prose blockquote {
    @apply bg-navy-50 border-l-4 border-navy-700 p-6 my-8 italic text-lg text-charcoal-800;
  }
  
  .prose strong {
    @apply font-semibold text-navy-900;
  }
</style>